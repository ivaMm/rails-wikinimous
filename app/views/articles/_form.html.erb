<%= form_for(@article) do |f| %>
<%= f.label :title %>
<br>
<%= f.text_field :title %>
<br>
<%= f.label :content %>
<br>
<%= f.text_area :content %>
<br>
  <% if @article.persisted? %>
    <%= f.submit value="Update Article"%>
  <% else %>
    <%= f.submit value="Create Article"%>
  <% end %>
<% end %>